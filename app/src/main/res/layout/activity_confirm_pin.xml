<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_confirm_pin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.simpalm.meetingtracker.ConfirmPinActivity">

    <TextView
        style="@style/TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/edit_text_height"
        android:gravity="center"
        android:text="@string/confirm_pin"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/confirm_pin_et"
        style="@style/EditText"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/edit_text_height"
        android:gravity="center"
        android:hint="@string/confirm_input"
        android:inputType="number"
        android:maxLength="4"
        android:padding="@dimen/edit_text_padding" />

    <Button
        android:id="@+id/confirm_pin_btn"
        style="@style/Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:text="@string/submit" />

</LinearLayout>
