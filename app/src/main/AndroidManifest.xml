<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.simpalm.meetingtracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity android:name=".PinActivity" />
        <activity android:name=".ConfirmPinActivity" />
        <activity
            android:name=".CreateEvent"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ReminderSettings" />
        <activity android:name=".PinSettings" />
        <activity android:name=".ChangePin" />
        <activity android:name=".SetupPin" />
        <activity android:name=".LoginPin" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UpcomingEvent" />
        <activity android:name=".PastEvents"></activity>
    </application>

</manifest>